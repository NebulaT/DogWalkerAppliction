<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/rectangle_at_the_top2"
        android:layout_width="388dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/DarkGray"
        android:foregroundGravity="bottom|fill_vertical|fill_horizontal|clip_horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/rectangle_at_the_top"
        android:layout_width="383dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:background="#808080"
        android:foregroundGravity="top|center_horizontal|fill_horizontal|clip_horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="CREATE NEW ACCOUNT"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_at_the_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_at_the_top"
        app:layout_constraintVertical_bias="0.925"
        tools:textColor="@color/GhostWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:layout_margin="0dp"
        android:gravity="bottom|center_vertical"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_at_the_top2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top"
        app:layout_constraintVertical_bias="0.571">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Name"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/namePlain"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColorLink="@color/DarkGray" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Email"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailPlain"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColorLink="#FFA9A9A9" />

        <TextView
            android:id="@+id/phoneTextView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="8dp"
            android:text="Phone"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/phonePlain"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="phone"
            android:textColorLink="#FFA9A9A9" />

        <TextView
            android:id="@+id/passwordTextView"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_margin="8dp"
            android:text="Password"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/passwordPlain"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:ems="10"
            android:inputType="textPassword|numberPassword"
            android:textColorLink="#FFA9A9A9" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/DimGray"
            android:padding="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="CREATE" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>